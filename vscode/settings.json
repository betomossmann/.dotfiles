{
  // EDITOR
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.cursorStyle": "line",
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.suggestSelection": "first",
  "editor.renderLineHighlight": "gutter",
  "editor.renderWhitespace": "boundary",
  "editor.bracketPairColorization.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.lineNumbers": "interval",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.accessibilitySupport": "off",
  "editor.semanticHighlighting.enabled": false,
  "editor.find.addExtraSpaceOnTop": false,
  "search.showLineNumbers": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.tabCompletion": "on",
  "editor.minimap.enabled": false,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.guides.highlightActiveIndentation": false,
  "editor.stickyScroll.enabled": true,
  "editor.hover.sticky": true,
  "editor.formatOnSave": true,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.rulers": [80, 120],

  // WINDOW
  "window.zoomLevel": -1,
  "window.autoDetectColorScheme": true,
  "window.commandCenter": false,

  // WORKBENCH
  "workbench.startupEditor": "newUntitledFile",
  "workbench.layoutControl.enabled": false,
  "workbench.editor.decorations.colors": true,
  "workbench.editor.decorations.badges": true,
  "workbench.colorTheme": "Evondev Dracula Darker Contrast",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.iconTheme": "symbols",
  "workbench.list.smoothScrolling": true,
  "workbench.tree.expandMode": "singleClick",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.labelFormat": "short",
  "workbench.editor.empty.hint": "hidden",
  "workbench.tree.indent": 10,
  "breadcrumbs.enabled": false,

  // APC CONFIG
  "apc.font.family": "Inter",
  "apc.stylesheet": {
    ".title-label > h2": "display: none"
  },

  // JAVA/TYPE support
  "javascript.preferences.quoteStyle": "single",
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "never",
  "typescript.tsserver.log": "off",
  "typescript.preferences.quoteStyle": "single",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "never",

  // TERMINAL
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },

  // EXTENSIONS
  "symbols.hidesExplorerArrows": false,
  "extensions.ignoreRecommendations": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "material-icon-theme.languages.associations": { "dotenv": "tune" },
  "material-icon-theme.activeIconPack": "nest",
  "material-icon-theme.folders.color": "#6272a4",
  "cSpell.allowCompoundWords": true,
  "cSpell.enabled": true,
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.language": "en,pt,pt_BR",
  "css.lint.hexColorLength": "ignore",
  "tailwindCSS.validate": true,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "plaintext": "javascript"
  },
  "jest.showTerminalOnLaunch": false,
  "playwright.reuseBrowser": false,
  "playwright.showTrace": false,

  // Emmet
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.useInlineCompletions": true,
  "emmet.triggerExpansionOnTab": true,
  "emmet.syntaxProfiles": {
    "typescript": "tsx",
    "javascript": "jsx",
    "postcss": "css"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "javascriptreact": "javascriptreact",
    "typescriptreact": "typescriptreact",
    "mardkown": "html",
    "postcss": "css"
  },

  // COLORIZE
  "colorize.hide_current_line_decorations": false,
  "colorize.include": [".tsx", ".jsx", ".ts", ".js"],
  "colorize.languages": [
    "typescriptreact",
    "javascriptreact",
    "javascript",
    "typescript",
    "css",
    "sass",
    "scss",
    "less",
    "pcss",
    "sss",
    "stylus",
    "xml",
    "svg",
    "json",
    "jsonc",
    "yaml"
  ],
  "colorize.colorized_colors": ["HEXA", "RGB", "HSL"],
  "colorize.enable_search_variables": false,
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,

  // ASSOCIATED FILE
  "files.associations": {
    ".sequelizerc": "javascript",
    ".stylelintrc": "json",
    "*.tsx": "typescriptreact",
    ".env.*": "dotenv",
    ".prettierrc": "json",
    "*.css": "tailwindcss"
  },
  "cSpell.userWords": [
    "apikey",
    "autofetch",
    "Bdev",
    "bdevdocs",
    "boilerplates",
    "Bootcamp",
    "celsius",
    "chakra",
    "clsx",
    "Coverals",
    "Dotenv",
    "drei",
    "esbenp",
    "esnext",
    "Evondev",
    "extralight",
    "facebook",
    "fastify",
    "Fastify",
    "feedbackwidget",
    "fileid",
